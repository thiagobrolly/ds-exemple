{
  "packages": [
    "packages/*"
  ],
  "version": "0.0.4",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "version": {
      "conventionalCommits": true,
      "yes": true,
      "allowBranch": "master"
    },
    "publish": {
      "ignoreChanges": [
        "*.stories.tsx",
        "*.test.tsx",
        "*.test.ts",
        "*.spec.ts"
      ]
    }
  }
}
